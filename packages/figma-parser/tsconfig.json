{
  "extends": "@lch/typescript-config/base",
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"]
}
